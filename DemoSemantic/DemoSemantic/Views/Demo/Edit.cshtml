                    //$("#divresult").html(html);
                    //$("addmodal").modal('show');
                }
            };
        }
        else {
            var option = {
                url: "http://localhost:3000/posts/" + $("#sid").val(),
                type: "put",
                data: encoded,
                contentType: "application/json;charset=utf-8",
                success: function () {
                    window.location.href = "/Demo/Index";
                    //var div = $("#divresult");
                    //if (div.length == 0)
