                    //html += "</div>";
                    //html += "</div>"
                    //$("#divresult").html(html);
                    //$("emodal").modal('show');
                }
            };
        }
        if ( $('form').form('is valid') ) {
            $.ajax(option);
            return false;
        }

    });
